    <!-- MSAL.js library -->
    <script src="https://alcdn.msauth.net/browser/2.32.2/js/msal-browser.min.js"></script>
    
    <script>
        // Microsoft Authentication Library configuration for GitHub Pages
        const msalConfig = {
            auth: {
                clientId: 'de8bc8b5-d9f9-48b1-a8ad-b748da725064', // Graph Explorer client ID
                authority: 'https://login.microsoftonline.com/common',
                redirectUri: 'https://developer.microsoft.com/graph/graph-explorer'
            },
            cache: {
                cacheLocation: 'sessionStorage',
                storeAuthStateInCookie: true
            }
        };
        
        const msalInstance = new msal.PublicClientApplication(msalConfig);
        
        const loginRequest = {
            scopes: ['Calendars.Read', 'User.Read'],
            prompt: 'select_account'
        };
        
        // Global state
        let currentWeekStart = null;
        let accessToken = null;
        let currentEvents = [];
        
        // Category keywords for automatic categorization
        const categoryKeywords = {
            'people-dev': ['1:1', 'one-on-one', 'coaching', 'mentoring', 'team building', 'managing up', 'recognition', 'check-in', 'skip level'],
            'ops-perf': ['mbo', 'metrics', 'report', 'performance', 'kpi', 'dashboard', 'budget', 'promotion', 'review', 'quarterly', 'executive'],
            'process-sys': ['process', 'workflow', 'automation', 'power automate', 'system', 'documentation', 'sop', 'procedure', 'improvement'],
            'training': ['training', 'enablement', 'learning', 'certification', 'onboarding', 'skill', 'workshop', 'tutorial', 'demo'],
            'strategic': ['strategic', 'project', 'innovation', 'api', 'integration', 'roadmap', 'planning', 'initiative', 'development']
        };
        
        // Initialize
        window.onload = function() {
            checkAuth();
            initializeWeek();
        };
        
        function checkAuth() {
            // Check for auth response in URL (after redirect)
            msalInstance.handleRedirectPromise()
                .then(response => {
                    if (response) {
                        handleAuthResponse(response);
                    } else {
                        // Check if we have a cached account
                        const accounts = msalInstance.getAllAccounts();
                        if (accounts.length > 0) {
                            msalInstance.setActiveAccount(accounts[0]);
                            acquireToken();
                        }
                    }
                })
                .catch(error => {
                    console.error('Auth error:', error);
                });
        }
        
        async function login() {
            try {
                await msalInstance.loginRedirect(loginRequest);
            } catch (error) {
                console.error('Login error:', error);
                alert('Login failed. Please try again.');
            }
        }
        
        function handleAuthResponse(response) {
            if (response.account) {
                msalInstance.setActiveAccount(response.account);
                accessToken = response.accessToken;
                updateAuthUI(true);
                loadCalendarEvents();
            }
        }
        
        function logout() {
            accessToken = null;
            sessionStorage.clear();
            msalInstance.setActiveAccount(null);
            updateAuthUI(false);
            document.getElementById('calendarContainer').innerHTML = '<div class="info-box">Disconnected. Click "Connect O365" to reconnect.</div>';
        }
        
        async function acquireToken() {
            try {
                const account = msalInstance.getActiveAccount();
                if (!account) return;
                
                const response = await msalInstance.acquireTokenSilent({
                    ...loginRequest,
                    account: account
                });
                accessToken = response.accessToken;
                updateAuthUI(true);
                loadCalendarEvents();
            } catch (error) {
                console.error('Token acquisition error:', error);
                if (error instanceof msal.InteractionRequiredAuthError) {
                    await login();
                }
            }
        }
        
        function updateAuthUI(isAuthenticated) {
            const statusIndicator = document.getElementById('statusIndicator');
            const statusText = document.getElementById('statusText');
            const loginBtn = document.getElementById('loginBtn');
            const logoutBtn = document.getElementById('logoutBtn');
            
            if (isAuthenticated) {
                statusIndicator.classList.add('connected');
                statusText.textContent = 'Connected';
                loginBtn.style.display = 'none';
                logoutBtn.style.display = 'block';
            } else {
                statusIndicator.classList.remove('connected');
                statusText.textContent = 'Not Connected';
                loginBtn.style.display = 'block';
                logoutBtn.style.display = 'none';
            }
        }
        
        function initializeWeek() {
            const today = new Date();
            const dayOfWeek = today.getDay();
            const monday = new Date(today);
            monday.setDate(today.getDate() - (dayOfWeek === 0 ? 6 : dayOfWeek - 1));
            monday.setHours(0, 0, 0, 0);
            currentWeekStart = monday;
            updateWeekDisplay();
            if (accessToken) {
                loadCalendarEvents();
            }
        }
        
        function updateWeekDisplay() {
            const endDate = new Date(currentWeekStart);
            endDate.setDate(endDate.getDate() + 4);
            
            const options = { month: 'short', day: 'numeric', year: 'numeric' };
            const startStr = currentWeekStart.toLocaleDateString('en-US', options);
            const endStr = endDate.toLocaleDateString('en-US', options);
            
            document.getElementById('weekDisplay').textContent = `${startStr} - ${endStr}`;
        }
        
        function previousWeek() {
            currentWeekStart.setDate(currentWeekStart.getDate() - 7);
            updateWeekDisplay();
            if (accessToken) loadCalendarEvents();
        }
        
        function nextWeek() {
            currentWeekStart.setDate(currentWeekStart.getDate() + 7);
            updateWeekDisplay();
            if (accessToken) loadCalendarEvents();
        }
        
        function goToToday() {
            initializeWeek();
        }
        
        async function refreshCalendar() {
            if (!accessToken) {
                alert('Please connect to Office 365 first');
                return;
            }
            await loadCalendarEvents();
        }
        
        async function loadCalendarEvents() {
            if (!accessToken) return;
            
            const container = document.getElementById('calendarContainer');
            container.innerHTML = '<div class="loading"><div class="loading-spinner"></div>Loading calendar events...</div>';
            
            try {
                const startDate = new Date(currentWeekStart);
                startDate.setHours(0, 0, 0, 0);
                
                const endDate = new Date(currentWeekStart);
                endDate.setDate(endDate.getDate() + 5);
                endDate.setHours(23, 59, 59, 999);
                
                const startISO = startDate.toISOString();
                const endISO = endDate.toISOString();
                
                const response = await fetch(
                    `https://graph.microsoft.com/v1.0/me/calendarview?startdatetime=${startISO}&enddatetime=${endISO}&$orderby=start/dateTime`,
                    {
                        headers: {
                            'Authorization': `Bearer ${accessToken}`,
                            'Content-Type': 'application/json'
                        }
                    }
                );
                
                if (!response.ok) {
                    throw new Error('Failed to fetch calendar events');
                }
                
                const data = await response.json();
                currentEvents = data.value;
                renderCalendar();
            } catch (error) {
                console.error('Error loading calendar:', error);
                container.innerHTML = '<div class="error-message">Failed to load calendar events. Please try refreshing.</div>';
            }
        }
        
        function renderCalendar() {
            const container = document.getElementById('calendarContainer');
            
            const html = `
                <div class="success-box">
                    ‚úÖ Connected! Showing ${currentEvents.length} events for this week. Add/edit events in Outlook and refresh here to see updates.
                </div>
                <div class="calendar">
                    ${renderTimeColumn()}
                    ${renderDayColumns()}
                </div>
            `;
            
            container.innerHTML = html;
        }
        
        function renderTimeColumn() {
            let html = '<div class="time-column"><div class="day-header" style="background: transparent;"></div>';
            for (let hour = 8; hour <= 16; hour++) {
                const time = hour > 12 ? `${hour - 12}:00 PM` : `${hour}:00 AM`;
                html += `<div class="time-label">${time}</div>`;
            }
            html += '</div>';
            return html;
        }
        
        function renderDayColumns() {
            const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'];
            const dayClasses = ['mon', 'tue', 'wed', 'thu', 'fri'];
            const themes = ['People Development', 'Operations & Performance', 'Process & Systems', 'Training & Enablement', 'Strategic Projects'];
            
            let html = '';
            
            for (let i = 0; i < 5; i++) {
                const dayDate = new Date(currentWeekStart);
                dayDate.setDate(dayDate.getDate() + i);
                
                html += `<div class="day-column">`;
                html += `<div class="day-header ${dayClasses[i]}">${days[i]}<br>${themes[i]}</div>`;
                
                for (let hour = 8; hour <= 16; hour++) {
                    const dayEvents = getEventsForTimeSlot(dayDate, hour);
                    html += `<div class="time-slot">`;
                    
                    dayEvents.forEach(event => {
                        html += renderEvent(event);
                    });
                    
                    html += `</div>`;
                }
                
                html += `</div>`;
            }
            
            return html;
        }
        
        function getEventsForTimeSlot(date, hour) {
            return currentEvents.filter(event => {
                const eventStart = new Date(event.start.dateTime);
                const eventDate = eventStart.toDateString();
                const slotDate = date.toDateString();
                const eventHour = eventStart.getHours();
                
                return eventDate === slotDate && eventHour === hour;
            });
        }
        
        function renderEvent(event) {
            const category = categorizeEvent(event);
            const startTime = new Date(event.start.dateTime);
            const endTime = new Date(event.end.dateTime);
            const timeStr = `${formatTime(startTime)} - ${formatTime(endTime)}`;
            
            const bodyText = event.body?.content ? stripHtml(event.body.content).substring(0, 80) : '';
            
            return `
                <div class="event ${category}">
                    <div class="event-title">${escapeHtml(event.subject)}</div>
                    <div class="event-time">${timeStr}</div>
                    ${bodyText ? `<div class="event-desc">${escapeHtml(bodyText)}...</div>` : ''}
                </div>
            `;
        }
        
        function categorizeEvent(event) {
            // Check if event has Outlook categories
            if (event.categories && event.categories.length > 0) {
                const outlookCategory = event.categories[0].toLowerCase();
                if (outlookCategory.includes('people')) return 'people-dev';
                if (outlookCategory.includes('ops') || outlookCategory.includes('performance')) return 'ops-perf';
                if (outlookCategory.includes('process')) return 'process-sys';
                if (outlookCategory.includes('training')) return 'training';
                if (outlookCategory.includes('strategic')) return 'strategic';
            }
            
            // Auto-categorize based on keywords in title
            const title = event.subject.toLowerCase();
            for (const [category, keywords] of Object.entries(categoryKeywords)) {
                if (keywords.some(keyword => title.includes(keyword))) {
                    return category;
                }
            }
            
            return 'uncategorized';
        }
        
        function formatTime(date) {
            const hours = date.getHours();
            const minutes = date.getMinutes();
            const ampm = hours >= 12 ? 'PM' : 'AM';
            const displayHours = hours % 12 || 12;
            const displayMinutes = minutes.toString().padStart(2, '0');
            return `${displayHours}:${displayMinutes} ${ampm}`;
        }
        
        function stripHtml(html) {
            const tmp = document.createElement('div');
            tmp.innerHTML = html;
            return tmp.textContent || tmp.innerText || '';
        }
        
        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, m => map[m]);
        }
    </script>
</body>
</html>
